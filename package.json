{
  "name": "strapi-medusa-commerce",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:all": "node scripts/dev-all.js",
    "dev:all:clean": "node scripts/dev-all.js --clean",
    "dev:medusa": "npm --prefix apps/medusa run dev",
    "dev:strapi": "npm --prefix apps/strapi run develop",
    "dev:storefront": "npm --prefix apps/storefront run dev",
    "android:sync": "npm --prefix apps/storefront run cap:sync",
    "android:open": "npm --prefix apps/storefront run cap:open:android",
    "android:run": "npm --prefix apps/storefront run cap:run:android",
    "build:storefront": "npm --prefix apps/storefront run build",
    "infra:up": "docker compose up -d postgres redis",
    "infra:down": "docker compose down",
    "check": "npm --prefix apps/storefront run lint"
  }
}
